<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/logoImageView"
        android:layout_margin="24dp"
        android:background="@drawable/curved_box"
        android:contentDescription="@string/image_dsc"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:scaleType="centerCrop"
        android:layout_width="80dp"
        android:src="@drawable/tmp"
        android:layout_height="80dp"/>

    <TextView
        android:id="@+id/titleTextView"
        android:text="Blockchain Bites: BTC on Ethereum, DeFiâ€™s latest stablecoin, the currency cold wars"
        android:layout_marginStart="16dp"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        android:textColor="@android:color/black"
        android:fontFamily="@font/regular"
        app:layout_constraintTop_toTopOf="@id/logoImageView"
        app:layout_constraintStart_toEndOf="@id/logoImageView"
        android:layout_width="0dp"
        android:layout_marginEnd="16dp"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/dscTextView"
        android:text="6hrs ago"
        android:layout_marginStart="16dp"
        android:textSize="14sp"
        android:fontFamily="@font/regular"

        app:layout_constraintBottom_toBottomOf="@id/logoImageView"
        app:layout_constraintTop_toBottomOf="@id/titleTextView"
        app:layout_constraintStart_toEndOf="@id/logoImageView"
        android:layout_width="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/catTextView"
        android:text="Category:"
        android:layout_marginStart="16dp"
        android:textSize="14sp"
        android:fontFamily="@font/regular"
        app:layout_constraintBottom_toBottomOf="@id/logoImageView"
        app:layout_constraintTop_toBottomOf="@id/titleTextView"
        app:layout_constraintStart_toEndOf="@id/dscTextView"
        android:layout_width="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_height="wrap_content"/>

    <TextView
        android:text=" DeFi"

        app:layout_constraintBottom_toBottomOf="@id/logoImageView"
        android:textSize="14sp"
        android:textColor="@android:color/black"
        android:fontFamily="@font/regular"
        app:layout_constraintTop_toBottomOf="@id/titleTextView"
        app:layout_constraintStart_toEndOf="@id/catTextView"
        android:layout_width="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>